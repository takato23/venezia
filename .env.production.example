# ===========================================
# Venezia Ice Cream - Production Environment
# ===========================================

# 🍦 Application Configuration
NODE_ENV=production
PORT=5001

# 🌐 Frontend Configuration
VITE_APP_NAME=Venezia Ice Cream
VITE_API_URL=https://your-domain.com/api

# 🗄️ Database Configuration
# Set to true to use Supabase in production
USE_SUPABASE=true

# ☁️ Supabase Configuration (REQUIRED in production)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# 🔐 Authentication & Security (REQUIRED)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_production_jwt_secret_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your_production_session_secret

# 🔒 Security Configuration
ENABLE_AUTH=true
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# 📊 Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# 📧 Email Configuration (Recommended)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# 💳 Payment Integration (Optional)
MERCADOPAGO_PUBLIC_KEY=your_production_mp_public_key
MERCADOPAGO_ACCESS_TOKEN=your_production_mp_access_token

# 🤖 External APIs (Optional)
OPENAI_API_KEY=your_production_openai_key
REACT_APP_GEMINI_API_KEY=your_production_gemini_key

# ================================
# 🚨 PRODUCTION CHECKLIST:
# ================================
# ✓ USE_SUPABASE=true (SQLite not recommended for production)
# ✓ All Supabase credentials configured
# ✓ JWT_SECRET is strong (32+ chars, cryptographically random)
# ✓ ENABLE_AUTH=true
# ✓ ALLOWED_ORIGINS set to production domains only
# ✓ Email service configured for notifications
# ✓ All sensitive values are kept secure
# ================================