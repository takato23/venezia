# Server Configuration
PORT=5002
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_public_key_here

# MercadoPago Configuration
# Get your credentials from: https://www.mercadopago.com/developers/panel/credentials
# Use TEST credentials for development/sandbox
# Use PRODUCTION credentials for live environment

# Access Token (Required)
# Sandbox: Use your TEST Access Token
# Production: Use your PRODUCTION Access Token
MERCADOPAGO_ACCESS_TOKEN=TEST-your-test-access-token-here

# Webhook Secret (Optional but recommended for security)
# Configure in MercadoPago dashboard under Webhooks
MERCADOPAGO_WEBHOOK_SECRET=your_webhook_secret_here

# Store Configuration (Optional)
MERCADOPAGO_STORE_ID=venezia-pos-001
MERCADOPAGO_EXTERNAL_POS_ID=venezia-caja-01

# Webhook URL (Required for notifications)
# Example: https://yourdomain.com/api/payments/webhook
MERCADOPAGO_NOTIFICATION_URL=https://yourdomain.com/api/payments/webhook

# Success/Failure URLs (Optional - for web checkout)
MERCADOPAGO_SUCCESS_URL=https://yourdomain.com/payment-success
MERCADOPAGO_FAILURE_URL=https://yourdomain.com/payment-failure
MERCADOPAGO_PENDING_URL=https://yourdomain.com/payment-pending

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here