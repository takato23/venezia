{
  "name": "venezia-frontend",
  "version": "2.0.0",
  "description": "Venezia Ice Cream - Modern Frontend SPA",
  "main": "src/index.js",
  "scripts": {
    "start": "concurrently \"npm run backend:start\" \"npm run dev\"",
    "dev": "vite",
    "dev:full": "concurrently \"npm run backend:start\" \"npm run dev\"",
    "backend": "node scripts/start-backend.js",
    "backend:start": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "backend:install": "cd backend && npm install",
    "build": "vite build",
    "build:analyze": "vite build && vite-bundle-visualizer",
    "preview": "vite preview",
    "lint": "eslint src/",
    "test": "cd backend && node test-models.js",
    "optimize": "npm run build:analyze",
    "kill:dev": "pkill -f 'vite\\|node.*dev\\|npm.*dev' || true && lsof -ti:3000 | xargs kill -9 || true",
    "kill:backend": "pkill -f 'node.*server.js\\|python.*run.py\\|flask' || true && lsof -ti:5002 | xargs kill -9 || true",
    "kill:all": "npm run kill:dev && npm run kill:backend",
    "postinstall": "npm run backend:install"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@heroicons/react": "^2.2.0",
    "@react-google-maps/api": "^2.20.7",
    "@supabase/supabase-js": "^2.50.3",
    "axios": "^1.11.0",
    "chart.js": "^4.2.1",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "framer-motion": "^10.12.4",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.363.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.8.1",
    "socket.io-client": "^4.8.1",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.1.0",
    "dotenv": "^17.1.0",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.32.2",
    "parse5": "^8.0.0",
    "postcss": "^8.4.21",
    "puppeteer": "^24.15.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.2.7",
    "terser": "^5.31.0",
    "vite": "^7.0.6"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
