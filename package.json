{
  "name": "venezia-frontend",
  "version": "2.0.0",
  "description": "Venezia Ice Cream - Modern Frontend SPA",
  "main": "src/index.js",
  "scripts": {
    "start": "concurrently \"npm run backend:start\" \"npm run frontend\"",
    "dev": "node scripts/dev-server.js",
    "dev:clean": "node scripts/dev-server.js",
    "dev:full": "concurrently \"npm run backend:start\" \"npm run dev\"",
    "backend": "node scripts/start-backend.js",
    "backend:start": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "backend:install": "cd backend && npm install",
    "frontend": "node scripts/dev-server.js",
    "dev:webpack": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "build:analyze": "npm run build && node scripts/analyze-bundle.js",
    "build:stats": "webpack --mode production --json > stats.json",
    "lint": "eslint src/",
    "test": "jest",
    "pwa:install": "npm run build && npm run pwa:register",
    "optimize": "npm run build && npm run build:analyze",
    "kill:dev": "pkill -f 'webpack\\|node.*dev\\|npm.*dev' || true && lsof -ti:3000 | xargs kill -9 || true",
    "kill:backend": "pkill -f 'node.*server.js\\|python.*run.py\\|flask' || true && lsof -ti:5002 | xargs kill -9 || true",
    "kill:all": "npm run kill:dev && npm run kill:backend"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.50.3",
    "axios": "^1.3.4",
    "chart.js": "^4.2.1",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "framer-motion": "^10.12.4",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.363.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.8.1",
    "socket.io-client": "^4.8.1",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.2",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "dotenv": "^17.1.0",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.32.2",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "puppeteer": "^24.11.2",
    "style-loader": "^3.3.2",
    "tailwindcss": "^3.2.7",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.9.3",
    "workbox-webpack-plugin": "^6.5.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
