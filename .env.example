# ===========================================
# Venezia Ice Cream - Environment Variables
# ===========================================

# 🍦 Application Configuration
NODE_ENV=development
PORT=5002
VITE_APP_NAME=Venezia Ice Cream

# 🌐 Frontend API Configuration
VITE_API_URL=http://localhost:5002/api

# 🗄️ Database Configuration
USE_SUPABASE=false
DATABASE_PATH=./database/venezia.db

# ☁️ Supabase Configuration (Production)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# 🔐 Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here

# 🔒 Security Configuration
ENABLE_AUTH=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# 🤖 External APIs (Optional)
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# 📧 Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 💳 Payment Integration (Optional)
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# 📊 Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=false

# ================================
# 🚨 IMPORTANT SECURITY NOTES:
# ================================
# 1. Copy this file to .env
# 2. Update all "your_*_here" values with real credentials
# 3. NEVER commit .env to version control
# 4. Set ENABLE_AUTH=true for production
# 5. Use strong passwords and secrets (32+ characters)
# ================================