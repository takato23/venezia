{
  "version": 2,
  "name": "venezia-ice-cream",
  "buildCommand": "BUILD_SYSTEM=vite npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": null,
  "functions": {
    "backend/server.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "backend/**",
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "BUILD_SYSTEM": "vite"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/socket.io/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}